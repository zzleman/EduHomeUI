@model Blog
@{
    ViewData["Title"] = "Delete";
}

<div class="card">
    <div class="card-body">
        <h4 class="card-title mb-4">Update Blog</h4>
        <img src="@Model.ImagePath" width="150" />
        <h4 class="card-title">@Model.Blogger</h4>
        <p class="card-title-desc">@Model.PostTime</p>
        <p class="card-title-desc">@Model.Comments</p>
        <p class="card-title-desc">@Model.Description</p>
        <p class="card-title-desc">@Model.ImagePath</p>
        <div class="d-flex flex-wrap gap-2">
            <form method="post" asp-route-id="@Model.Id">
                <button type="submit" class="btn btn-danger waves-effect waves-light">Delete</button>
            </form>
            <a asp-action="Index" class="btn btn-light waves-effect">Back to List</a>
        </div>
    </div>
</div>