@model IEnumerable<Course>
@{
    ViewData["Title"] = "Index";
    int count = 1;
}

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Course</h4>
        <a asp-action="Create" class="btn btn-primary mb-2">Create New Course</a>
        <div class="table-responsive">
            <table class="table table-dark mb-0">

                <thead>
                    <tr>
                        <th>#</th>
                        <th>Image</th>
                        <th>Title</th>
                        <th>Description</th>
                        <th>Settings</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var course in Model)
                    {
                        <tr>
                            <th scope="row">@count</th>
                            <td><img src="@course.ImagePath" style="width:100px" /></td>
                            <td>@course.Title</td>
                            <td>@course.Description</td>
                            <td>
                                <a asp-action="Update" asp-route-id="@course.Id" class="btn btn-warning">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@course.Id" class="btn btn-danger">
                                    <i class="fas fa-trash-alt"></i>
                                </a>
                            </td>
                        </tr>
                        count++;
                    }
                </tbody>
            </table>
        </div>

    </div>
</div>
