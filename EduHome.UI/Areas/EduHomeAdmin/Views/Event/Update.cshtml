@model Event
@{
    ViewData["Title"] = "Create";
}

<div class="card">
    <div class="card-body">
        <h4 class="card-title mb-4">Update Event</h4>
        @*<img src="@Model.ImagePath" width="150" />*@
    <form method="post">
        <div class="row mb-4">
            <label asp-for="Title" class="col-sm-3 col-form-label">Title</label>
            <div class="col-sm-9">
                <input asp-for="Title" class="form-control">
                <span class="text-danger" asp-validation-for="Title"></span>
            </div>
        </div>
        <div class="row mb-4">
            <label asp-for="Month" class="col-sm-3 col-form-label">Month</label>
            <div class="col-sm-9">
                <input asp-for="Month" class="form-control">
                <span class="text-danger" asp-validation-for="Month"></span>
            </div>
        </div>
        <div class="row mb-4">
            <label asp-for="Start" class="col-sm-3 col-form-label">Start</label>
            <div class="col-sm-9">
                <input asp-for="Start" class="form-control">
                <span class="text-danger" asp-validation-for="Start"></span>
            </div>
        </div>
        <div class="row mb-4">
            <label asp-for="End" class="col-sm-3 col-form-label">End</label>
            <div class="col-sm-9">
                <input asp-for="End" class="form-control">
                <span class="text-danger" asp-validation-for="End"></span>
            </div>
        </div>
        <div class="row mb-4">
            <label asp-for="Location" class="col-sm-3 col-form-label">Location</label>
            <div class="col-sm-9">
                <input asp-for="Location" class="form-control">
                <span class="text-danger" asp-validation-for="Location"></span>
            </div>
        </div>
        <div class="row justify-content-end">
            <div class="col-sm-9">
                <div>
                    <button type="submit" class="btn btn-primary w-md">Update</button>
                </div>
            </div>
        </div>
    </form>
    </div>
    <!-- end card body -->
</div>

@section Script {
    <partial name="_ValidationScript" />
}
