@model HomeVM
@{
    ViewData["Title"] = "Index";
    var countE = 1;
    var count = 1;
}


<!-- Background Area Start -->
<section id="slider-container" class="slider-area">
    <div class="slider-owl owl-theme owl-carousel">
        <!-- Start Slingle Slide -->
        @foreach (var slider in Model.Sliders)
        {
            <div class="single-slide item" style="background-image: url(@slider.ImageBGPath)">
                <!-- Start Slider Content -->
                <div class="slider-content-area">
                    <div class="container">
                        <div class="row">
                            <div class="col-lg-7 col-md-offset-left-5">
                                <div class="slide-content-wrapper">
                                    <div class="slide-content">
                                        <h3>@slider.Title </h3>
                                        <h2>@slider.SecondTitle </h2>
                                        <p>@slider.Description </p>
                                        <a class="default-btn" href="about">Learn More</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</section>
<!-- End Slingle Slide -->

<!-- Background Area End -->
<!-- Notice Start -->
<section class="notice-area pt-150 pb-150">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <div class="notice-left">
                    <h3>Notice Board</h3>
                    @foreach (var notice in Model.NoticeBoards.OrderByDescending(d => d.Date))
                    {
                        <div class="single-notice-left  @(count % 3 == 0 ? " pb-75": "mb-25 pb-25")">
                            <h4>@notice.Date.ToString("dd MMMM, yyyy")</h4>
                            <p>@notice.Info </p>
                        </div>
                        count++;
                    }
                </div>
            </div>
            <div class="col-md-6">
                <div class="notice-right">
                    @foreach (var noticeR in Model.NoticeRights )
                    {
                        <div class="single-notice-right @(noticeR.Id==Model.NoticeBoards.ElementAt(2).Id ? "" : "mb-25 pb-25") ">
                            <h3>@noticeR.Title</h3>
                            <p>@noticeR.Description </p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Notice End -->
<!-- Choose Start -->
<section class="choose-area pb-85 pt-77">
    <div class="container">
        <div class="row">
            <div class="col-md-8 col-md-offset-left-4">
                <div class="choose-content text-start">
                    @foreach (var choose in Model.Chooses)
                    {
                        <h2>@choose.Title</h2>
                        <p>@choose.Description </p>
                        <p class="choose-option">@choose.AltTitle </p>
                        <a class="default-btn" href="CourseDetail">view courses</a>
                    }
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Choose Area End -->
<!-- Courses Area Start -->
<div class="courses-area pt-150 text-center">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="section-title">
                    <img src="~/assets/img/icon/section.png" alt="section-title">
                    <h2>COURSES WE OFFER</h2>
                </div>
            </div>
        </div>
        <div class="row">
            @foreach (var courses in Model.Courses)
            {
                <div class="col-lg-4 col-md-6">
                    <div class="single-course">
                        <div class="course-img">
                            <a href="course-details.html">
                                <img src="@courses.ImagePath" alt="course">
                                <div class="course-hover">
                                    <i class="fa fa-link"></i>
                                </div>
                            </a>
                        </div>
                        <div class="course-content">
                            <h3><a href="CourseDetail">@courses.Title</a></h3>
                            <p>@courses.Description</p>
                            <a class="default-btn" href="CourseDetail">read more</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<!-- Courses Area End -->
<!-- Event Area Start -->
<div class="event-area one text-center pt-140 pb-150">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="section-title">
                    <img src="assets/img/icon/section.png" alt="section-title">
                    <h2>UPCOMMING EVENTS</h2>
                </div>
            </div>
        </div>
        <div class="row">
                @foreach (var events in Model.Events)
                {
                        <div class="col-lg-6 @(countE <=4 ? "pt-5 pt-lg-0":"pt-5 pt-lg-0")">
                            <div class="single-event mb-35 @(events.Id==Model.Events.ElementAt(3).Id ? "" : "mb-35")">
                                <div class="event-date">
                                    <h3><a href="event-details.html">@events.Date.Day <span>@events.Date.ToString("MMMM")</span></a></h3>
                                </div>
                                <div class="event-content text-start">
                                    <div class="event-content-left">
                                        <h4><a href="event-details.html">@events.Title</a></h4>
                                        <ul>
                                            <li><i class="fa fa-clock-o">@events.Date.ToString("h:00")AM - @events.End.ToString("h:mm")PM</i></li>
                                            <li><i class="fa fa-map-marker"></i>@events.Location</li>
                                        </ul>
                                    </div>
                                    <div class="event-content-right">
                                        <a class="default-btn" href="EventDetail">join now</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                }

        </div>
    </div>
</div>
<!-- Event Area End -->
<!-- Testimonial Area Start -->

<div class="testimonial-area pt-110 pb-105 text-center">
    <div class="container">
        <div class="row">
            @foreach (var testimonial in Model.Testimonials)
            {
                <div class="testimonial-owl owl-theme owl-carousel">
                    <div class="col-lg-8 offset-lg-2">
                        <div class="single-testimonial">
                            <div class="testimonial-info">
                                <div class="testimonial-img">
                                    <img src="@testimonial.ImagePath" alt="testimonial">
                                </div>
                                <div class="testimonial-content">
                                    <p>@testimonial.Description</p>
                                    <h4>@testimonial.Fullname</h4>
                                    <h5>@testimonial.Position, @testimonial.Profession</h5>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<!-- Testimonial Area End -->
<!-- Blog Area Start -->
<div class="blog-area pt-150 pb-150">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="section-title text-center">
                    <img src="assets/img/icon/section.png" alt="section-title">
                    <h2>LATEST FROM BLOG</h2>
                </div>
            </div>
        </div>
        <div class="row">
            @foreach (var blogs in Model.Blogs)
            {
                <div class="col-lg-4 col-md-6">
                    <div class="single-blog">
                        <div class="blog-img">
                            <a href="blog-details.html"><img src="@blogs.ImagePath" alt="blog"></a>
                            <div class="blog-hover">
                                <a href="blog-details.html"><i class="fa fa-link"></i></a>
                            </div>
                        </div>
                        <div class="blog-content">
                            <div class="blog-top">
                                <p>@blogs.Blogger  /  @blogs.PostTime.ToString("MMMM dd, yyyy")  /  <i class="fa fa-comments-o" style="padding-right:5px"></i>@blogs.Comments</p>
                            </div>
                            <div class="blog-bottom">
                                <h2><a href="blog-details.html">@blogs.Description </a></h2>
                                <a href="blog-details.html">read more</a>
                            </div>
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
</div>
<!-- Blog Area End -->
<!-- Subscribe Start -->
<div class="subscribe-area pt-60 pb-70">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 offset-lg-2">
                <div class="subscribe-content section-title text-center">
                    <h2>subscribe our newsletter</h2>
                    <p>I must explain to you how all this mistaken idea </p>
                </div>
                <div class="newsletter-form mc_embed_signup">
                    <form action="https://devitems.us11.list-manage.com/subscribe/post?u=6bbb9b6f5827bd842d9640c82&amp;id=05d85f18ef" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="validate" target="_blank" novalidate>
                        <div id="mc_embed_signup_scroll" class="mc-form">
                            <input type="email" value="" name="EMAIL" class="email" id="mce-EMAIL" placeholder="Enter your e-mail address" required>
                            <!-- real people should not fill this in and expect good things - do not remove this or risk form bot signups-->
                            <div class="mc-news" aria-hidden="true"><input type="text" name="b_6bbb9b6f5827bd842d9640c82_05d85f18ef" tabindex="-1" value=""></div>
                            <button id="mc-embedded-subscribe" class="default-btn" type="submit" name="subscribe"><span>subscribe</span></button>
                        </div>
                    </form>
                    <!-- mailchimp-alerts Start -->
                    <div class="mailchimp-alerts">
                        <div class="mailchimp-submitting"></div><!-- mailchimp-submitting end -->
                        <div class="mailchimp-success"></div><!-- mailchimp-success end -->
                        <div class="mailchimp-error"></div><!-- mailchimp-error end -->
                    </div>
                    <!-- mailchimp-alerts end -->
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Subscribe End -->