@model EventDetailVM

@{
    ViewData["Title"] = "Index";
    var count = 1;
}

<!-- Banner Area Start -->
<div class="banner-area-wrapper">
    <div class="banner-area text-center">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="banner-content-wrapper">
                        <div class="banner-content">
                            <h2>Event / Details</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Banner Area End -->
<!-- Event Details Start -->
<div class="event-details-area blog-area pt-150 pb-140">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <div class="event-details">
                    @foreach (var eventdetails in Model.EventDetail)
                    {
                        <div class="event-details-content">
                            <div class="event-details-img">
                                <img src="@eventdetails.MainImgPath" alt="event-details">
                                <div class="event-date">
                                    <h3>@eventdetails.Date.Day <span>@eventdetails.Date.ToString("MMM", System.Globalization.CultureInfo.InvariantCulture)</span></h3>
                                </div>
                            </div>
                            <h2>@eventdetails.Title</h2>
                            <ul>
                                <li><span>Time: </span>@eventdetails.Time</li>
                                <li><span>Venue: </span>@eventdetails.Venue</li>
                            </ul>
                            <p>@eventdetails.Description</p>
                            <p>I must explain to you how all this is a mistaken idea of denouncing a great explorer of the rut. The elder of human happiness sciences, where all this mistaken idea of ncing great explorer of the rut the is lder of human happiness.</p>
                            <p>I must explain to you how all this is a mistaken idea of denouncing a great explorer of the rut. The elder of human happiness sciences, where all this mistaken idea of ncing great explorer of the rut the is lder of human happiness.</p>
                            <div class="speakers-area fix">
                                <h4>Speakers</h4>
                                @foreach (var speaker in Model.Speakers)
                                {
                                    <div class="single-speaker">
                                        <div class="speaker-img">
                                            <img src="@speaker.ImagePath" alt="speaker">
                                        </div>
                                        <div class="speaker-name">
                                            <h5>@speaker.Fullname</h5>
                                            <p>@speaker.Position, @speaker.WorkPlace</p>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    }
                    <div class="reply-area">
                        <h3>Leave a Reply</h3>
                        <p>I must explain to you how all this is a mistaken idea of ncing great explorer of the rut. The elder of human happiness sciences.</p>
                        <form id="contact-form" action="#">
                            <div class="row">
                                <div class="col-md-12">
                                    <p>Name</p>
                                    <input type="text" name="name" id="name">
                                </div>
                                <div class="col-md-12">
                                    <p>Email</p>
                                    <input type="text" name="email" id="email">
                                </div>
                                <div class="col-md-12">
                                    <p>Subject</p>
                                    <input type="text" name="subject" id="subject">
                                </div>
                                <div class="col-lg-12">
                                    <p>Your Message</p>
                                    <textarea name="message" id="message" cols="30" rows="10"></textarea>
                                    <button class="reply-btn">Submit</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="blog-sidebar right">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="search-widget">
                                <form action="#">
                                    <input type="text" placeholder="Search">
                                    <button><i class="fas fa-search"></i></button>
                                </form>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="recent-post-widget">
                                <h3>Recent Posts</h3>
                                <ul>
                                    <li><a href="#">Event / Details</a></li>
                                    <li><a href="#">Event / Details</a></li>
                                    <li><a href="#">Event / Details</a></li>
                                </ul>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="categories-widget">
                                <h3>Categories</h3>
                                <ul>
                                    <li><a href="#">Event / Details</a></li>
                                    <li><a href="#">Event / Details</a></li>
                                    <li><a href="#">Event / Details</a></li>
                                </ul>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="tags-widget">
                                <h3>Tags</h3>
                                <ul>
                                    <li><a href="#">Event / Details</a></li>
                                    <li><a href="#">Event / Details</a></li>
                                    <li><a href="#">Event / Details</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Event Details End -->
<!-- Subscribe Area Start -->
